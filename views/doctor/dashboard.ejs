<div class="container py-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h2 fw-bold mb-1">
                <i class="bi bi-speedometer2 text-primary me-2"></i>Doctor Dashboard
            </h1>
            <p class="text-muted mb-0">Welcome back, Dr. <%= user.name %></p>
        </div>
        <div class="col-auto">
            <div class="btn-group">
                <a href="/doctor/new-prescription" class="btn btn-primary">
                    <i class="bi bi-prescription2 me-1"></i>New Prescription
                </a>
                <a href="/doctor/new-appointment" class="btn btn-outline-primary">
                    <i class="bi bi-calendar-plus me-1"></i>Schedule Visit
                </a>
            </div>
        </div>
    </div>

    <!-- Success Messages -->
    <% if (typeof query !== 'undefined' && query.success) { %>
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>
            <% if (query.success === 'prescription-created') { %>
                Prescription created successfully!
            <% } else if (query.success === 'appointment-created') { %>
                Appointment scheduled successfully!
            <% } %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-gradient rounded-circle p-3">
                                <i class="bi bi-people text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-4"><%= stats.totalPatients %></div>
                            <div class="text-muted small">Total Patients</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-circle p-3">
                                <i class="bi bi-prescription2 text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-4"><%= stats.activeMedications %></div>
                            <div class="text-muted small">Active Medications</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-gradient rounded-circle p-3">
                                <i class="bi bi-calendar-event text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-4"><%= stats.upcomingAppointments %></div>
                            <div class="text-muted small">Upcoming Visits</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-gradient rounded-circle p-3">
                                <i class="bi bi-telegram text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-4"><%= stats.connectedPatients %></div>
                            <div class="text-muted small">Connected to Bot</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Prescriptions -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-prescription2 text-primary me-2"></i>Recent Prescriptions
                        </h5>
                        <a href="/doctor/new-prescription" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-plus me-1"></i>Add New
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <% if (recentMedications.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% recentMedications.forEach(medication => { %>
                                <div class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1 fw-semibold"><%= medication.name %></h6>
                                            <p class="mb-1 text-muted small">
                                                Patient: <%= medication.patientId.name %>
                                            </p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                <%= medication.timesPerDay.join(', ') %>
                                            </small>
                                        </div>
                                        <span class="badge bg-<%= medication.isActive ? 'success' : 'secondary' %>">
                                            <%= medication.isActive ? 'Active' : 'Inactive' %>
                                        </span>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-prescription2 text-muted fs-1"></i>
                            <p class="text-muted mt-2">No prescriptions yet</p>
                            <a href="/doctor/new-prescription" class="btn btn-primary btn-sm">
                                Create First Prescription
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-calendar-event text-success me-2"></i>Upcoming Appointments
                        </h5>
                        <a href="/doctor/new-appointment" class="btn btn-sm btn-outline-success">
                            <i class="bi bi-plus me-1"></i>Schedule New
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <% if (upcomingAppointments.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% upcomingAppointments.forEach(appointment => { %>
                                <div class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1 fw-semibold"><%= appointment.patientId.name %></h6>
                                            <p class="mb-1 text-muted small">
                                                <i class="bi bi-calendar me-1"></i>
                                                <%= new Date(appointment.date).toLocaleDateString() %>
                                                at <%= appointment.time %>
                                            </p>
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt me-1"></i>
                                                <%= appointment.location %>
                                            </small>
                                        </div>
                                        <span class="badge bg-<%= appointment.status === 'scheduled' ? 'primary' : 'secondary' %>">
                                            <%= appointment.status.charAt(0).toUpperCase() + appointment.status.slice(1) %>
                                        </span>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-event text-muted fs-1"></i>
                            <p class="text-muted mt-2">No upcoming appointments</p>
                            <a href="/doctor/new-appointment" class="btn btn-success btn-sm">
                                Schedule First Appointment
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>