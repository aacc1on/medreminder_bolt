<div class="container py-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h2 fw-bold mb-1">
                <i class="bi bi-calendar-plus text-success me-2"></i>Schedule Appointment
            </h1>
            <p class="text-muted mb-0">Book a visit for your patient</p>
        </div>
        <div class="col-auto">
            <a href="/doctor/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Error Messages -->
                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <% errors.forEach(error => { %>
                                <div><i class="bi bi-exclamation-triangle me-2"></i><%= error.msg %></div>
                            <% }) %>
                        </div>
                    <% } %>

                    <form action="/doctor/new-appointment" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="patientId" class="form-label">Select Patient *</label>
                                <select class="form-select" name="patientId" id="patientId" required>
                                    <option value="">Choose a patient...</option>
                                    <% patients.forEach(patient => { %>
                                        <option value="<%= patient._id %>" 
                                                <%= formData.patientId === patient._id.toString() ? 'selected' : '' %>>
                                            <%= patient.name %> (<%= patient.email %>)
                                        </option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="date" class="form-label">Appointment Date *</label>
                                <input type="date" 
                                       class="form-control" 
                                       id="date" 
                                       name="date" 
                                       value="<%= formData.date || '' %>"
                                       required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="time" class="form-label">Appointment Time *</label>
                                <input type="time" 
                                       class="form-control" 
                                       id="time" 
                                       name="time" 
                                       value="<%= formData.time || '' %>"
                                       required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="location" class="form-label">Location *</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="location" 
                                       name="location" 
                                       value="<%= formData.location || (user.clinicName || '') %>"
                                       placeholder="e.g., Main clinic, Room 3"
                                       required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="notes" class="form-label">Appointment Notes</label>
                            <textarea class="form-control" 
                                      id="notes" 
                                      name="notes" 
                                      rows="3"
                                      placeholder="e.g., Follow-up consultation, Lab results review, etc."><%= formData.notes || '' %></textarea>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-calendar-plus me-2"></i>Schedule Appointment
                            </button>
                            <a href="/doctor/dashboard" class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Helper Card -->
            <div class="card border-0 bg-light mt-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-info-circle text-success me-2"></i>Appointment Reminders
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled small">
                                <li><i class="bi bi-telegram text-primary me-2"></i>Patient will receive Telegram reminder 1 day before</li>
                                <li><i class="bi bi-clock text-warning me-2"></i>Reminders sent daily at 9:00 AM</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled small">
                                <li><i class="bi bi-geo-alt text-danger me-2"></i>Include specific location details</li>
                                <li><i class="bi bi-chat-left-text text-info me-2"></i>Add relevant notes for the patient</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Set today as minimum date
document.getElementById('date').min = new Date().toISOString().split('T')[0];

// Auto-fill location with clinic name if available
document.addEventListener('DOMContentLoaded', function() {
    const locationField = document.getElementById('location');
    if (!locationField.value && '<%= user.clinicName %>') {
        locationField.value = '<%= user.clinicName %>';
    }
});
</script>