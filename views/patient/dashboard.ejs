<div class="container py-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h2 fw-bold mb-1">
                <i class="bi bi-speedometer2 text-primary me-2"></i>Patient Dashboard
            </h1>
            <p class="text-muted mb-0">Welcome back, <%= user.name %></p>
        </div>
        <div class="col-auto">
            <% if (!stats.telegramConnected) { %>
                <a href="/patient/connect-bot" class="btn btn-warning">
                    <i class="bi bi-telegram me-1"></i>Connect Telegram
                </a>
            <% } else { %>
                <span class="badge bg-success fs-6">
                    <i class="bi bi-telegram me-1"></i>Telegram Connected
                </span>
            <% } %>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-gradient rounded-circle p-3">
                                <i class="bi bi-prescription2 text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-4"><%= stats.activeMedications %></div>
                            <div class="text-muted small">Active Medications</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-circle p-3">
                                <i class="bi bi-calendar-event text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-4"><%= stats.upcomingAppointments %></div>
                            <div class="text-muted small">Upcoming Visits</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-gradient rounded-circle p-3">
                                <i class="bi bi-clock text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-4"><%= stats.todaysMedications %></div>
                            <div class="text-muted small">Today's Medications</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-<%= stats.telegramConnected ? 'info' : 'secondary' %> bg-gradient rounded-circle p-3">
                                <i class="bi bi-telegram text-white fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold fs-6">
                                <%= stats.telegramConnected ? 'Connected' : 'Not Connected' %>
                            </div>
                            <div class="text-muted small">Telegram Bot</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Today's Medications -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-calendar-day text-warning me-2"></i>Today's Medications
                        </h5>
                        <a href="/patient/medications" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-eye me-1"></i>View All
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <% if (todaysMedications.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% todaysMedications.forEach(medication => { %>
                                <div class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1 fw-semibold">
                                                <i class="bi bi-capsule text-primary me-2"></i>
                                                <%= medication.name %>
                                            </h6>
                                            <p class="mb-1 text-muted small">
                                                Dosage: <%= medication.dosage %>
                                            </p>
                                            <div class="d-flex flex-wrap gap-1">
                                                <% medication.timesPerDay.forEach(time => { %>
                                                    <span class="badge bg-light text-dark">
                                                        <i class="bi bi-clock me-1"></i><%= time %>
                                                    </span>
                                                <% }) %>
                                            </div>
                                            <% if (medication.instructions) { %>
                                                <small class="text-muted d-block mt-1">
                                                    <i class="bi bi-info-circle me-1"></i>
                                                    <%= medication.instructions %>
                                                </small>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-day text-muted fs-1"></i>
                            <p class="text-muted mt-2">No medications scheduled for today</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-calendar-event text-success me-2"></i>Upcoming Appointments
                        </h5>
                        <a href="/patient/appointments" class="btn btn-sm btn-outline-success">
                            <i class="bi bi-eye me-1"></i>View All
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <% if (upcomingAppointments.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% upcomingAppointments.forEach(appointment => { %>
                                <div class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1 fw-semibold">
                                                <i class="bi bi-person-badge text-primary me-2"></i>
                                                Dr. <%= appointment.doctorId.name %>
                                            </h6>
                                            <p class="mb-1 text-muted small">
                                                <%= appointment.doctorId.clinicName %>
                                            </p>
                                            <p class="mb-1">
                                                <i class="bi bi-calendar me-1"></i>
                                                <%= new Date(appointment.date).toLocaleDateString('en-US', { 
                                                    weekday: 'long', 
                                                    year: 'numeric', 
                                                    month: 'long', 
                                                    day: 'numeric' 
                                                }) %>
                                            </p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i><%= appointment.time %>
                                                <span class="mx-2">•</span>
                                                <i class="bi bi-geo-alt me-1"></i><%= appointment.location %>
                                            </small>
                                            <% if (appointment.notes) { %>
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        <i class="bi bi-chat-left-text me-1"></i>
                                                        <%= appointment.notes %>
                                                    </small>
                                                </div>
                                            <% } %>
                                        </div>
                                        <span class="badge bg-primary">
                                            <%= new Date(appointment.date) > new Date() ? 'Upcoming' : 'Today' %>
                                        </span>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-event text-muted fs-1"></i>
                            <p class="text-muted mt-2">No upcoming appointments</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Telegram Connection Alert -->
    <% if (!stats.telegramConnected) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-warning border-0 shadow-sm">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle fs-4 me-3"></i>
                        <div class="flex-grow-1">
                            <h6 class="alert-heading mb-1">Connect Telegram Bot for Reminders</h6>
                            <p class="mb-0">
                                Connect your Telegram account to receive automatic medication and appointment reminders.
                            </p>
                        </div>
                        <a href="/patient/connect-bot" class="btn btn-warning">
                            <i class="bi bi-telegram me-1"></i>Connect Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>