<div class="container py-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h2 fw-bold mb-1">
                <i class="bi bi-prescription2 text-primary me-2"></i>My Medications
            </h1>
            <p class="text-muted mb-0">View all your prescribed medications</p>
        </div>
        <div class="col-auto">
            <a href="/patient/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Medications List -->
    <% if (medications.length > 0) { %>
        <div class="row g-4">
            <% medications.forEach(medication => { %>
                <div class="col-lg-6 col-xl-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title fw-bold mb-0">
                                    <i class="bi bi-capsule text-primary me-2"></i>
                                    <%= medication.name %>
                                </h5>
                                <span class="badge bg-<%= medication.isActive ? 'success' : 'secondary' %>">
                                    <%= medication.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted d-block">Prescribed by</small>
                                <strong class="text-dark">
                                    Dr. <%= medication.doctorId.name %>
                                </strong>
                                <div class="text-muted small">
                                    <%= medication.doctorId.clinicName %>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">Dosage</small>
                                <span class="fw-semibold"><%= medication.dosage %></span>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block mb-2">Times per day</small>
                                <div class="d-flex flex-wrap gap-1">
                                    <% medication.timesPerDay.forEach(time => { %>
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-clock me-1"></i><%= time %>
                                        </span>
                                    <% }) %>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">Duration</small>
                                <div class="small">
                                    <i class="bi bi-calendar-check text-success me-1"></i>
                                    <%= new Date(medication.startDate).toLocaleDateString() %>
                                    <span class="mx-2">â†’</span>
                                    <i class="bi bi-calendar-x text-danger me-1"></i>
                                    <%= new Date(medication.endDate).toLocaleDateString() %>
                                </div>
                            </div>

                            <% if (medication.instructions) { %>
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">Instructions</small>
                                    <div class="bg-light rounded p-2 small">
                                        <i class="bi bi-info-circle text-primary me-1"></i>
                                        <%= medication.instructions %>
                                    </div>
                                </div>
                            <% } %>

                            <div class="mt-auto">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-plus me-1"></i>
                                    Prescribed on <%= new Date(medication.createdAt).toLocaleDateString() %>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-prescription2 text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">No Medications Prescribed</h4>
            <p class="text-muted">Your doctor hasn't prescribed any medications yet.</p>
            <a href="/patient/dashboard" class="btn btn-primary">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    <% } %>
</div>