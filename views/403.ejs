<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="py-5">
                <i class="bi bi-shield-exclamation text-warning" style="font-size: 6rem;"></i>
                <h1 class="display-4 fw-bold mt-4">403</h1>
                <h2 class="h3 text-muted mb-4">Access Denied</h2>
                <p class="lead text-muted mb-4">
                    <%= locals.message || 'You don\'t have permission to access this page.' %>
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house me-1"></i>Go Home
                    </a>
                    <% if (locals.user) { %>
                        <% if (user.role === 'doctor') { %>
                            <a href="/doctor/dashboard" class="btn btn-outline-primary">
                                <i class="bi bi-speedometer2 me-1"></i>Doctor Dashboard
                            </a>
                        <% } else { %>
                            <a href="/patient/dashboard" class="btn btn-outline-primary">
                                <i class="bi bi-speedometer2 me-1"></i>Patient Dashboard
                            </a>
                        <% } %>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Login
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>