<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-heart-pulse-fill text-primary fs-1"></i>
                        <h2 class="fw-bold mt-3">Join MediRemind</h2>
                        <p class="text-muted">Create your account to get started</p>
                    </div>

                    <!-- Error Messages -->
                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <% errors.forEach(error => { %>
                                <div><i class="bi bi-exclamation-triangle me-2"></i><%= error.msg %></div>
                            <% }) %>
                        </div>
                    <% } %>

                    <form action="/auth/register" method="POST" id="registerForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control" 
                                           id="name" 
                                           name="name" 
                                           value="<%= formData.name || '' %>"
                                           required>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input type="email" 
                                           class="form-control" 
                                           id="email" 
                                           name="email" 
                                           value="<%= formData.email || '' %>"
                                           required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password" 
                                       class="form-control" 
                                       id="password" 
                                       name="password" 
                                       minlength="6"
                                       required>
                            </div>
                            <div class="form-text">Password must be at least 6 characters long</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Account Type</label>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <div class="form-check">
                                        <input class="form-check-input" 
                                               type="radio" 
                                               name="role" 
                                               id="roleDoctor" 
                                               value="doctor"
                                               <%= formData.role === 'doctor' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="roleDoctor">
                                            <i class="bi bi-person-badge text-primary me-2"></i>
                                            <strong>Doctor</strong><br>
                                            <small class="text-muted">Manage patients and prescriptions</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-check">
                                        <input class="form-check-input" 
                                               type="radio" 
                                               name="role" 
                                               id="rolePatient" 
                                               value="patient"
                                               <%= formData.role === 'patient' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="rolePatient">
                                            <i class="bi bi-person-heart text-success me-2"></i>
                                            <strong>Patient</strong><br>
                                            <small class="text-muted">Receive medication reminders</small>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4" id="clinicNameField" style="display: none;">
                            <label for="clinicName" class="form-label">Clinic/Hospital Name</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-building"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       id="clinicName" 
                                       name="clinicName" 
                                       value="<%= formData.clinicName || '' %>">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>
                    </form>

                    <hr class="my-4">
                    
                    <div class="text-center">
                        <p class="mb-0">Already have an account?</p>
                        <a href="/auth/login" class="btn btn-outline-primary mt-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const doctorRadio = document.getElementById('roleDoctor');
    const patientRadio = document.getElementById('rolePatient');
    const clinicNameField = document.getElementById('clinicNameField');
    const clinicNameInput = document.getElementById('clinicName');

    function toggleClinicField() {
        if (doctorRadio.checked) {
            clinicNameField.style.display = 'block';
            clinicNameInput.required = true;
        } else {
            clinicNameField.style.display = 'none';
            clinicNameInput.required = false;
        }
    }

    doctorRadio.addEventListener('change', toggleClinicField);
    patientRadio.addEventListener('change', toggleClinicField);
    
    // Initial check
    toggleClinicField();
});
</script>